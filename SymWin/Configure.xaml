<Window x:Class="SymWin.Configure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sym="clr-namespace:SymWin;assembly="
        Title="Configure" Height="100" Width="500">
   <StackPanel>
      <Label>Configure key bindings:</Label>
      <Grid>
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
         </Grid.ColumnDefinitions>
         <ComboBox Text="Select Key" Name="Key" Grid.Column="0" ItemsSource="{Binding Source={x:Static sym:LetterMappings.KeysToSymbols}, Path=Keys}" IsEditable="true" IsReadOnly="true"
                   SelectionChanged="OnConfigureSelectionChanged">
         </ComboBox>
         <TextBox Grid.Column="1" Name="Letters" FontSize="20" />
         <Button Grid.Column="2" Click="OnConfigureSave">Save</Button>
      </Grid>
   </StackPanel>

</Window>
