<Window x:Class="SymWin.LetterSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Letter Selector" Height="31" Width="87" WindowStyle="None" AllowsTransparency="True" BorderThickness="0" Topmost="True" Deactivated="OnWindowDeactivated">
   <Window.Resources>
      <Style TargetType="TextBox">
         <Style.Triggers>
            <Trigger Property="UIElement.IsFocused" Value="True">
               <Setter Property="Background" Value="PowderBlue" />
            </Trigger>
         </Style.Triggers>
      </Style>
   </Window.Resources>
   <DockPanel>
      <TextBox Name="FirstBox" IsReadOnly="True" HorizontalAlignment="Left" Height="31" TextWrapping="Wrap" Text="a" VerticalAlignment="Top" Width="29" FontSize="20" TextAlignment="Center" BorderBrush="Black" BorderThickness="2,2,1,2" RenderTransformOrigin="2.069,1.29"/>
      <TextBox IsReadOnly="True" HorizontalAlignment="Left" Height="31" TextWrapping="Wrap" Text="ä" VerticalAlignment="Top" Width="29" FontSize="20" TextAlignment="Center" BorderBrush="Black" BorderThickness="1,2" RenderTransformOrigin="2.069,1.29" TextChanged="TextBox_TextChanged"/>
      <TextBox IsReadOnly="True"  HorizontalAlignment="Left" Height="31" TextWrapping="Wrap" Text="α" VerticalAlignment="Top" Width="29" FontSize="20" TextAlignment="Center" BorderBrush="Black" BorderThickness="1,2,2,2" RenderTransformOrigin="2.069,1.29" TextChanged="TextBox_TextChanged"/>
   </DockPanel>

</Window>
